const messageEmail = document.getElementById("messageEmail");
function showMessageEmail(message)
{
	messageEmail.classList.remove("hidden");
	messageEmail.innerText = message;
}
function checkEmailUnique(form) {

			userEmail = $("#email").val();

			var params = {email : userEmail};
           
           console.log(params);
           $.ajax({
            url: ,
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(params),
            success: function (result) {
                if(result == "OK")
                {
					 alert("ok");
					 form.submit();
				} 
				else
				{
					showMessageEmail("The email is existed")
				}
            },
            error: function (error) {
                 alert("Fail to connect to the server");
            }
            });
            const url =   '/MyshopAdmin/api/users/check_email';          
            $.post(url, params, function (response) {
				if (response == "OK") {
					form.submit();
				} else if (response == "Duplicated") {
					showWarningModal("There is another user having the email " + userEmail);
				} else {
					showErrorModal("Unknown response from server");
				}
			}).fail(function () {
				showErrorModal("Could not connect to the server");
			});

			return false;
}