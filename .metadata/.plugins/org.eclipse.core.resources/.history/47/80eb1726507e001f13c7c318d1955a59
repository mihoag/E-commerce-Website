var usernamePage = document.querySelector('#username-page');
var chatPage = document.querySelector('#chat-page');
var usernameForm = document.querySelector('#usernameForm');
var messageInput = document.querySelector('#message');
var messageArea = document.querySelector('#messageArea');
var btnSend= document.querySelector('#btnSend');
var images = document.querySelectorAll('img');




document.addEventListener('DOMContentLoaded', function()
{
	 var chatBox = document.getElementById('messageArea'); 
     var mobileHeight = window.innerHeight;

    chatBox.style.height = mobileHeight - 150 + 'px';
})

window.addEventListener('resize', function() {
 
 var chatBox = document.getElementById('messageArea'); 
    var mobileHeight = window.innerHeight;
    chatBox.style.height = mobileHeight - 150 + 'px';
});


function sendMessage(event) {

    
    var messageContent = messageInput.value.trim();
    if(messageContent) {
        var divMess = document.createElement('div');
        divMess.innerHTML = `
	    <div class="d-flex justify-content-between">
                
                <p class="small mb-1 text-muted"></p>
                <p class="small mb-1">Meow Meow</p>
              </div>
              <div class="d-flex flex-row justify-content-end"> 
                <div>
                  <p
                    class="small p-2 ms-3 mb-3 rounded-3"
                    style="background-color: #f5f6f7"
                  >
                    ${messageContent}
                  </p>
                </div>
                <img
                  src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                  alt="avatar 1"
                  style="width: 45px; height: 100%"
                />
              </div>
	        `  
        messageInput.value = '';
        messageArea.appendChild(divMess);      
        messageArea.scrollTop = messageArea.scrollHeight;
        recieveMessage();   
    }
    event.preventDefault();
}

function getRandomNumber() {
    return Math.floor(Math.random() * 4) + 1;
}

function recieveMessage()
{
    let times = getRandomNumber();
    let message = '';
    for(let i = 0; i < times; i++)
    {
        message += "meow ";
    }
    var divMess = document.createElement('div');

    fetch('https://meme-api.com/gimme/catmemes')
   .then(response => response.json())
   .then(data => {
    const imageUrl = data.url;
    divMess.innerHTML  = `
    <div class="d-flex justify-content-between">
        <p class="small mb-1">Cat GPT</p>
        <p class="small mb-1 text-muted"></p>
      </div>
      <div class="d-flex flex-row justify-content-start">
        <img
          src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3-bg.webp"
          alt="avatar 1"
          style="width: 45px; height: 100%"
        />
        <div>
          <p
            class="small p-2 ms-3 mb-3 rounded-3"
            style="background-color: #f5f6f7"
          >
            ${message}
          </p>
          <img src="${imageUrl}" class="img-fluid" alt="...">
        </div>
      </div>
    ` 
    });
    messageArea.appendChild(divMess);      
    playMeowSound(times);
    messageArea.scrollTop = messageArea.scrollHeight;
}

function playMeowSound(times) {
    console.log(times);
    const meowSound = document.getElementById('meowSound');
    playAudioMultipleTimes(meowSound, times); 
}


function playAudioMultipleTimes(audio, times) {
    let count = 0;

    audio.addEventListener('ended', function() {
        count++;
        if (count < times) {
            audio.currentTime = 0; // Reset to the start
            audio.play(); // Play again
        }
    });

    audio.play(); // Start playing
}

